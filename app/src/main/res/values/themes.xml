<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.SmartWaiter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_red</item>
        <item name="colorPrimaryVariant">@color/dark_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_red</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Button.White" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/dark_red</item>
    </style>

    <style name="Button.Facebook" parent="">
        <item name="colorPrimary">@color/facebook_blue</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Button.Red" parent="">
        <item name="colorPrimary">@color/dark_red</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="StripeDefaultTheme" parent="StripeBaseTheme">
        <!-- Applied to toolbar background -->
        <item name="colorPrimary">@color/dark_red</item>
        <!-- Applied to status bar -->
        <item name="colorPrimaryDark">@color/dark_red</item>

        <item name="colorControlNormal">@color/black</item>

        <item name="colorAccent">@color/black</item>
        <!-- Applied to form field text -->
        <item name="android:editTextColor">@color/black</item>

        <item name="editTextColor">@color/black</item>
    </style>
</resources>